<Layouts.app flash={@flash} current_path={@current_path} rabbitmq_connected={@rabbitmq_connected}>
  <div class="flex flex-col h-full">
    <!-- Hero Section -->
    <div class="text-center mt-4 mb-8 ">
      <h1 class="text-4xl font-bold mb-8">OpenAI Batch Manager</h1>
      <p class="text-lg text-base-content/70 max-w-2xl mx-auto">
        Submit requests and get the processed results back within 24h - using the Batch API to save you 50% on costs ðŸ’°
      </p>
    </div>
    
<!-- Navigation Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto w-full px-4 mb-12">
      <.link
        navigate={~p"/batches"}
        class="card bg-base-100 border border-base-300 shadow hover:shadow-lg hover:border-primary/50 transition-all duration-200"
      >
        <div class="card-body">
          <div class="flex items-center gap-3">
            <div class="p-3 rounded-lg bg-primary/20">
              <.icon name="batch-icon" class="w-8 h-8 text-primary" />
            </div>
            <div>
              <h2 class="card-title">Batches</h2>
              <p class="text-base-content/70">View and manage batch jobs</p>
            </div>
          </div>
        </div>
      </.link>

      <.link
        navigate={~p"/requests"}
        class="card bg-base-100 border border-base-300 shadow hover:shadow-lg hover:border-secondary/50 transition-all duration-200"
      >
        <div class="card-body">
          <div class="flex items-center gap-3">
            <div class="p-3 rounded-lg bg-secondary/20">
              <.icon name="hero-chat-bubble-bottom-center-text" class="w-8 h-8 text-primary" />
            </div>
            <div>
              <h2 class="card-title">Requests</h2>
              <p class="text-base-content/70">Browse individual requests</p>
            </div>
          </div>
        </div>
      </.link>
    </div>
    
<!-- How It Works Section -->
    <div class="bg-base-200 py-6 px-4 -mx-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold text-center mb-8">How It Works</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="flex flex-col items-center text-center">
            <div class="w-12 h-12 rounded-full bg-primary text-primary-content flex items-center justify-center text-xl font-bold mb-4">
              1
            </div>
            <h3 class="font-semibold mb-2">Submit Requests</h3>
            <p class="text-base-content/60 text-sm">
              Send individual LLM requests via API or RabbitMQ. Requests are automatically aggregated into batches.
            </p>
          </div>
          <div class="flex flex-col items-center text-center">
            <div class="w-12 h-12 rounded-full bg-primary text-primary-content flex items-center justify-center text-xl font-bold mb-4">
              2
            </div>
            <h3 class="font-semibold mb-2">Process with OpenAI</h3>
            <p class="text-base-content/60 text-sm">
              Batches are uploaded to
              <a
                href="https://platform.openai.com/docs/guides/batch"
                target="_blank"
                class="link link-primary"
              >
                OpenAI's Batch API
              </a>
              for cost-effective processing at up to 50% discount.
            </p>
          </div>
          <div class="flex flex-col items-center text-center">
            <div class="w-12 h-12 rounded-full bg-primary text-primary-content flex items-center justify-center text-xl font-bold mb-4">
              3
            </div>
            <h3 class="font-semibold mb-2">Receive Results</h3>
            <p class="text-base-content/60 text-sm">
              Results are delivered back to your application via webhook callbacks or RabbitMQ messages.
            </p>
          </div>
        </div>
      </div>
    </div>
    
<!-- Delivery Methods Section -->
    <div class="py-12 px-4 max-w-4xl mx-auto w-full">
      <h2 class="text-2xl font-bold text-center mb-8">Delivery Methods</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="card bg-base-100 border border-base-300 shadow">
          <div class="card-body">
            <div class="flex items-center gap-3 mb-2">
              <div class="p-2 rounded-lg bg-primary/20">
                <.icon name="hero-globe-alt" class="w-6 h-6 text-primary" />
              </div>
              <h3 class="card-title">Webhook</h3>
            </div>
            <p class="text-base-content/70">
              Receive results via HTTP POST to your specified endpoint. Ideal for serverless architectures and simple integrations.
            </p>
          </div>
        </div>
        <div class="card bg-base-100 border border-base-300 shadow">
          <div class="card-body">
            <div class="flex items-center gap-3 mb-2">
              <div class="p-2 rounded-lg bg-warning/20">
                <img src="/images/rabbitmq.svg" class="w-6 h-5" alt="RabbitMQ" />
              </div>
              <h3 class="card-title">RabbitMQ</h3>
            </div>
            <p class="text-base-content/70">
              Publish results to a RabbitMQ queue for reliable message delivery. Perfect for microservices and event-driven systems.
            </p>
          </div>
        </div>
      </div>
    </div>
    
<!-- API Documentation & Contribute Section -->
    <div class="bg-base-200 py-8 px-4 -mx-6 -mb-6 mt-auto">
      <div class="flex flex-col md:flex-row gap-4 justify-center max-w-3xl mx-auto">
        <a
          href="/api/swaggerui"
          target="_blank"
          class="btn btn-outline btn-sm gap-2 hover:border-primary/50"
        >
          <img src="/images/swagger.svg" class="w-5 h-5" alt="Swagger" /> Swagger UI
        </a>
        <a
          href="/api/openapi"
          target="_blank"
          class="btn btn-outline btn-sm gap-2 hover:border-primary/50"
        >
          <.icon name="hero-code-bracket" class="w-4 h-4" /> OpenAPI JSON
        </a>
        <a
          href="https://github.com/williamwinkler/openai-batch-manager"
          target="_blank"
          class="btn btn-outline btn-sm gap-2 hover:border-base-content"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path
              fill-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              clip-rule="evenodd"
            />
          </svg>
          View on GitHub
        </a>
      </div>
    </div>
  </div>
</Layouts.app>
